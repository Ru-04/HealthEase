<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTHEASE"
        android:fontFamily="@font/amita_regular"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="115dp"/>

    <Button
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edge20"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:layout_marginHorizontal="78dp"
        android:text="Sign in"
        android:textColor="#6B5AAF"
        android:fontFamily="@font/inter_variablefont"/>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edge20"
        android:layout_below="@id/sign_in"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="78dp"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="#6B5AAF"
        android:fontFamily="@font/inter_variablefont"/>
</RelativeLayout>