<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logout"
    android:background="@drawable/nav_background">
    <TextView
        android:id="@+id/logoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to logout?"
        android:fontFamily="@font/amiribold"
        android:textSize="30dp"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/black60"/>

    <Button
        android:id="@+id/logoutDevice"
        android:layout_below="@id/logoutText"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/strip2"
        android:text="Logout"
        android:textColor="@color/back_purple_dark"/>

</RelativeLayout>
