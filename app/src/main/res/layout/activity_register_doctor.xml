<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="20dp">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTH EASE"
        android:fontFamily="@font/amita_regular"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:paddingBottom="20dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="740dp"
        android:orientation="vertical"
        android:background="@drawable/smal_btn"
        android:backgroundTint="#8AF0BBFD"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <!-- Profile Icon -->

        <ImageView
            android:layout_width="80dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:src="@drawable/user"
            />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:hint="Doctor Name"
            android:padding="10dp"
            android:gravity="center"/>



        <EditText
            android:id="@+id/dob_doc"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:hint="Date of Birth"
            android:padding="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/gender_doc"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:hint="Gender"
            android:padding="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/specialization"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Specialization"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Years of Experience"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Email ID"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/contact_no_doc"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Contact Number"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/qualification"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="qualifications"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/aff_insti"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="affiliated instiution(optional)"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <ProgressBar
            android:id="@+id/progress_circular1"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/back_purple_dark"
            android:layout_marginHorizontal="130dp"
            android:visibility="gone"/>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:background="@drawable/round_edge20"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>