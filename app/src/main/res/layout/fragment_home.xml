<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback"
    tools:context=".ui.theme.ui.home.Homepage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="15dp"
                android:src="@drawable/boy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="25dp"
                android:text="Hello!!"
                android:layout_marginLeft="75dp"
                android:fontFamily="@font/amita_regular"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="65dp"
                android:fontFamily="@font/amita_regular"
                android:textSize="28dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:text="Aurora" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="440dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/amita_regular"
                android:padding="8dp"
                android:text="Do we meet any Doctors today?"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="15dp"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/emoticon" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/strip2"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="35dp">

                <Button
                    android:id="@+id/uploadbtn"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/strip"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:text="Upload prescription"
                    android:textSize="11dp"
                    android:paddingLeft="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_variablefont"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/submit"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="338dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/strip2"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="220dp">
                <Button
                    android:id="@+id/medivaultbtn"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/strip"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:text="MediVault"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_variablefont"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/folder"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="338dp"/>

            <ImageButton
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="188dp"
                android:src="@drawable/camera"
                android:background="?attr/selectableItemBackgroundBorderless" />


            <SearchView
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:background="@drawable/strip"
                android:backgroundTint="@color/purpledim"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="25dp"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:hint="Search Doctor/past medical reports"
                android:textColorHint="@color/black"
                android:fontFamily="@font/inter_variablefont"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="70dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:layout_marginTop="460dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/amita_bold"
                    android:textColor="@color/black"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:background="@drawable/specback"
                            android:layout_marginTop="510dp"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="24dp"/>

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Cardio.."
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:background="@drawable/specback"
                            android:layout_marginTop="510dp"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/lungs"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="24dp"/>

                            <TextView
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:text="Pulmono.."
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="12dp"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:background="@drawable/specback"
                            android:layout_marginTop="510dp"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ortho"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="24dp"/>

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Ortho.."
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:background="@drawable/specback"
                            android:layout_marginTop="510dp"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/brain"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="24dp"/>

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="neuro.."
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:background="@drawable/specback"
                            android:layout_marginTop="510dp"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="24dp"/>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Heart"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="30dp"
                                android:textColor="@color/black"
                                android:textSize="18dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Family"
                android:layout_marginTop="640dp"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/amita_bold"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/addfamily"
                android:layout_marginTop="650dp"
                android:layout_marginLeft="130dp"/>

            <RelativeLayout
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:background="@drawable/buttonbg"
                android:backgroundTint="@color/my_color"
                android:layout_marginTop="710dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:background="@drawable/buttonbg"
                android:backgroundTint="@color/my_color50"
                android:layout_marginTop="700dp"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:background="@drawable/buttonbg"
                android:backgroundTint="@color/my_color42"
                android:layout_marginTop="690dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/images"
                android:layout_marginTop="730dp"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliot"
                android:layout_marginTop="710dp"
                android:textSize="30dp"
                android:layout_marginLeft="125dp"
                android:fontFamily="@font/amiriregular"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="daughter"
                android:layout_marginTop="760dp"
                android:textSize="20dp"
                android:layout_marginLeft="125dp"
                android:fontFamily="@font/amiriregular"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 yr"
                android:layout_marginTop="760dp"
                android:textSize="20dp"
                android:layout_marginLeft="235dp"
                android:fontFamily="@font/amiriregular"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O+"
                android:layout_marginTop="760dp"
                android:textSize="20dp"
                android:layout_marginLeft="320dp"
                android:fontFamily="@font/amiriregular"
                android:textColor="@color/black"/>
            <SearchView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="820dp"
                android:layout_marginLeft="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No medical record found"
                    android:textColor="@color/black60"
                    android:layout_marginTop="830dp"
                    android:fontFamily="@font/inter_variablefont"
                    android:textColorHint="@color/my_color"
                    android:layout_marginLeft="110dp"
                    />
                </RelativeLayout>
            </ScrollView>
</RelativeLayout>