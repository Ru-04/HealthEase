<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otp.Enter_otp"
    android:orientation="vertical"
    android:background="@drawable/background2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTHEASE"
        android:fontFamily="@font/amita_regular"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/smal_btn"
        android:backgroundTint="#F0BBFD"
        android:layout_gravity="center"
        android:layout_marginTop="80dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifying"
            android:fontFamily="@font/amita_regular"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edge20"
                android:backgroundTint="@color/white"
                android:hint="enter OTP"
                android:layout_marginTop="35dp"
                android:maxLength="6"
                android:textAlignment="center"
                android:fontFamily="@font/inter_variablefont"
                android:layout_gravity="center"/>

        <TextView
            android:id="@+id/otp_text"
            android:layout_width="249dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_variablefont"
            android:maxLines="2"
            android:textAlignment="center"
            android:text="@string/otp_has_been_send_to_your_phone_number"
            android:textColor="@color/black" />



            <Button
                android:id="@+id/click"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/smal_btn"
                android:backgroundTint="#9EFFFFFF"
                android:fontFamily="@font/inter_variablefont"
                android:text="login"
                android:textAllCaps="false"/>

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend otp in 60 sec"
            android:fontFamily="@font/inter_variablefont"
            android:layout_below="@id/click"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"/>
        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/back_purple_dark"
            android:foregroundGravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="140dp"/>

    </LinearLayout>

</LinearLayout>